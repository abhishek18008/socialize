<link rel="stylesheet" href="/css/home.css">
<h1>
    Lets Socialise!
</h1>

<section id="feed-posts">
    <% if(locals.user){%>
        <h4>Be Social Do Post</h4>
        <form action="/users/posts/createpost" method="post">
            <textarea name="content" id="" cols="30" rows="3" placeholder="type here"></textarea>
            <input type="submit" value="post">
        </form>

        <div class="posted-posts ">
            <h2>your posts</h2>
            <ul>
                <% post.forEach(myFunction) %>
                    <% function myFunction(item, index){%>
                        <li>
                            <h2>
                                <%= item.user.name %>
                            </h2>
                            <h4>
                                <%= item.content %>
                            </h4>
                            <form action="/comment/addcomment" method="post">
                                <input type="text" name="comment" id="comment" placeholder="type here">
                                <input type="hidden" name="post" value="<% post %>" >
                                <button type=" submit">add a comment</button>
                            </form>
                        </li>
                        <%}%>
            </ul>
        </div>
        <% }%>
</section>